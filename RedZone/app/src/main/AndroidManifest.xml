<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redzone.bandipora">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.redzone.bandipora.activities.PostActivity">
        </activity>

        <activity
            android:label="@string/app_about"
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.redzone.bandipora.activities.Info">
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.redzone.bandipora.activities.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>